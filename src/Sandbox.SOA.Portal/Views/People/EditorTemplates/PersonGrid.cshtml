@model Sandbox.SOA.Portal.Models.Person.PersonGrid

<table class="table">
    <thead><tr>
               <th>Name</th>
               <th>Phone Number</th>
               <th>Primary Address</th>
           </tr></thead>
    <tbody>
        @foreach (var model in Model.Items)
        {
            <tr>
                @Html.EditorFor(m => model)
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3"><a href="#">Create</a></th>
        </tr>
    </tfoot>
</table>
