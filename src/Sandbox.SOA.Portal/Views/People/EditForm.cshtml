@using Sandbox.SOA.Portal.Helpers
@model Sandbox.SOA.Portal.Models.Person.PersonEditViewModel

<form action="@Url.PersonEdit(Model.Identifier)"
      method="POST"
      role="form" class="form-horizontal">
    <div class="panel-body">
    
        @Html.EditorFor(m=>m.Name)
        @Html.EditorFor(m=>m.MobilePhone)

    </div>
    <div class="panel-footer">
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Save</button>
                <a href="@Url.People()" class="btn btn-default">Cancel</a>
                <a href="@Url.PersonDelete(Model.Identifier)" data-toggle="modal" data-target="#modal" class="btn btn-default pull-right">Delete</a>
            </div>
        </div>        
    </div>
</form>
