@using Sandbox.SOA.Portal.Helpers
@model Sandbox.SOA.Portal.Models.Person.PersonCreateViewModel

<form action="@Url.PersonCreate()"
      method="POST"
      role="form" class="form-horizontal">
    <div class="panel-body">
    
        @Html.EditorFor(m=>m.Name)

    </div>
    <div class="panel-footer">
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
                <a data-dismiss="modal" href="@Url.People()" class="btn btn-default">Cancel</a>
            </div>
        </div>
        <div class="validation-summary row">
            @Html.ValidationSummary()       
        </div> 
    </div>
</form>
