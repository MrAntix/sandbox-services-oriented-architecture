@model PersonAddressesIndexViewModel

@{
    ViewBag.Title = Model.Person.Name.Full + "'s Addresses";
}

@section breadcrumb{

    @(Html.Breadcrumb()
          .Add("Home", Url.Home())
          .Add("People", Url.People())
          .Add("Edit", Url.PersonEdit(Model.Person.Identifier))
          .Add("Addresses", Url.PersonAddresses(Model.Person.Identifier))
          .Render())
}

@foreach (var address in Model.Items)
{
    @address.Name
}

